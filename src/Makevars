PKG_LIBS = -Lmbcomb -lmbcomb

SOURCES = $(wildcard *.cpp) 
UTILS = $(wildcard utils/*.c)
OBJECTS = $(UTILS:.c=.o) $(SOURCES:.cpp=.o)

all: subclean $(SHLIB)

$(SHLIB): $(OBJECTS) sublibs

sublibs: subclean
	@(cd mbcomb && CFLAGS="$(CFLAGS)" CC="$(CC)" CPICFLAGS="$(CPICFLAGS)" $(MAKE) libmbcomb.a)

clean: subclean
	rm -f $(SHLIB) $(OBJECTS)

subclean:
	@(cd mbcomb && $(MAKE) clean)
