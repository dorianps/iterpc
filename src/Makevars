PKG_LIBS = -Lmbcomb -lmbcomb

SOURCES = $(wildcard *.cpp) 
UTIL = $(wildcard util/*.c)
OBJECTS = $(UTIL:.c=.o) $(SOURCES:.cpp=.o)

all: subclean $(SHLIB)

$(SHLIB): $(OBJECTS) sublibs

sublibs: subclean
	@(cd mbcomb && $(MAKE) libmbcomb.a)

clean: subclean
	rm -f .libs _libs
	rm -f *.o $(SHLIB)
	rm -f util/*.o 

subclean:
	@(cd mbcomb && $(MAKE) clean)